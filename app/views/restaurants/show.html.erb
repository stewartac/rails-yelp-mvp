<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.category %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %> | <%= review.rating %> stars | <%= link_to "delete", review_path(review), method: :delete, data: { confirm: "Are you sure?!" } %></li>
  <% end %>
</ul>

<p><%= link_to "leave a review", new_restaurant_review_path(@restaurant) %></p>
<p><%= link_to "Back to restaurants", restaurants_path %></p>
