<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Restaurants</h1>
      <%= link_to "Add a restaurant", new_restaurant_path, class: "btn-lg btn-primary" %>

      <% @restaurants.each do |restaurant| %>
      <div class="card">
        <h2><%= restaurant.name %></h2>
        <p><%= restaurant.category %></p>
        <p><%= link_to "Click here for more details", restaurant_path(restaurant), class: "btn btn-primary" %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>
